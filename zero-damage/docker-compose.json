{
	"version": "3.7",
	"volumes": {
		"heimdall_data": {},
		"wallabag_data": {},
		"wallabag_images": {}
	},
	"services": {
		"web-ingress": {
			"environment": [
				"CLOUDFLARE_EMAIL=${CLOUDFLARE_EMAIL}",
				"CLOUDFLARE_API_KEY=${CLOUDFLARE_API_KEY}",
				"ACME_AGREE=true"
			],
			"image": "abiosoft/caddy",
			"ports": [
				"80:80",
				"443:443"
			],
			"restart": "unless-stopped",
			"volumes": [
				"/root/configs/caddyfile:/etc/Caddyfile",
				"/root/.caddy:/root/.caddy",
				"/srv:/srv"
			]
		}
	}
}
