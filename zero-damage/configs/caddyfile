sync.georgeflix.uk {
	gzip

	proxy / synclounge:8088 {
		except /socket.io
		except /slserver
		websocket
		transparent
	}

	proxy /slserver synclounge:8089 {
		header_upstream Host {host}
		header_upstream X-Real-IP {remote}
		header_upstream X-Forwarded-For {remote}
		websocket
		transparent
	}

	proxy /socket.io synclounge:8089/slserver/socket.io/ {
		header_upstream Host {host}
		header_upstream X-Real-IP {remote}
		header_upstream X-Forwarded-For {remote}
		websocket
		transparent
	}

	tls security@dfl.mn {
		dns cloudflare
	}
}
